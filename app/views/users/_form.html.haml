= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .form-horizontal
    .form-group 
      = f.label :first_name, :class => 'col-md-3 control-label'
      .col-md-5
        = f.text_field :first_name, :class => 'form-control'
    .form-group 
      = f.label :last_name, :class => 'col-md-3 control-label'
      .col-md-5
        = f.text_field :last_name, :class => 'form-control'          
    .form-group 
      = f.label :firm, :class => 'col-md-3 control-label'
      .col-md-5
        = f.text_field :firm, :class => 'form-control'  
    .actions.col-md-3.col-md-offset-5
      = f.submit 'Save', :class => 'btn btn-primary'
      = link_to 'Back', users_path, :class => 'btn btn-primary'
