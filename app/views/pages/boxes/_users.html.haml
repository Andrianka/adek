.btable.panel
  .panel-header
    ="Klienci"
  .panel-body
    .scroller
      %table.table.table-striped.table-bordered.bootstrap-datatable.datatable#table-user
        %thead
          %tr
            %th Name
            %th Firm
            %th
            %th
            %th
        %tbody
          - @users.each do |user|
            %tr
              %td= user.name
              %td= user.firm
              %td= link_to 'Show', user, class:"btn btn-sm btn-primary"
              %td= link_to 'Edit', edit_user_path(user), class:"btn btn-sm btn-primary"
              %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }, class:"btn btn-sm btn-danger"



:javascript
  $('#table-user').dataTable();